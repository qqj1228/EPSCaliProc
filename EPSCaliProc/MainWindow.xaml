<Window x:Class="EPSCaliProc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EPSCaliProc"
        mc:Ignorable="d"
        Title="EPS_EPB下线标定" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <RichTextBox Grid.Row="1" Grid.Column="3" x:Name="rbxLog" IsReadOnly="True" Loaded="LogBox_Loaded" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <FlowDocument x:Name="rbxDoc"></FlowDocument>
        </RichTextBox>
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="10"/>
                <RowDefinition/>
                <RowDefinition Height="10"/>
                <RowDefinition/>
                <RowDefinition Height="10"/>
                <RowDefinition/>
                <RowDefinition Height="10"/>
                <RowDefinition/>
                <RowDefinition Height="10"/>
                <RowDefinition/>
                <RowDefinition Height="10"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <Label Content="VIN 码："/>
                <TextBox x:Name="tbxVIN" Text="VIN Code" TextWrapping="Wrap" BorderBrush="Black" VerticalAlignment="Center"/>
            </StackPanel>
            <CheckBox Grid.Row="2" x:Name="ckbxClearCali" Content="清除上次EPS标定结果" VerticalAlignment="Center"/>
            <CheckBox Grid.Row="4" x:Name="ckbxRepeatCali" Content="EPS标定出错后重试" VerticalAlignment="Center"/>
            <StackPanel Grid.Row="6">
                <Label Content="重试次数：" IsEnabled="{Binding ElementName=ckbxRepeatCali, Path=IsChecked}"/>
                <TextBox x:Name="tbxRetrialTimes" Text="Times" TextWrapping="Wrap" BorderBrush="Black" VerticalAlignment="Center"
                         IsEnabled="{Binding ElementName=ckbxRepeatCali, Path=IsChecked}"/>
            </StackPanel>
            <Button Grid.Row="8" x:Name="btnEPSStart" Content="开始EPS标定" VerticalAlignment="Center" Click="BtnEPSStart_Click"/>
            <Button Grid.Row="10" x:Name="btnEPBStart" Content="开始EPB标定" VerticalAlignment="Center" Click="BtnEPBStart_Click"/>
            <Button Grid.Row="12" x:Name="btnClear" Content="清除记录" VerticalAlignment="Center" Click="BtnClear_Click"/>
        </Grid>
    </Grid>
</Window>
